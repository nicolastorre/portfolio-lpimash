<!DOCTYPE html>
<html lang="fr">
<head>
    
    <meta charset="utf-8">
    <title>LP - Cours Symfony2</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <link rel="stylesheet" href="css/pure-min.css">

</head>
<body>

<div class="pure-g">
    
    <div class="pure-u-1-5">
        
        <div class="pure-menu custom-restricted-width">
            <span class="pure-menu-heading">Menu</span>
        
            <ul class="pure-menu-list">
                <li class="pure-menu-item"><a href="{{ path('ajax', {valeur: 'foo'}) }}" class="ajax pure-menu-link">Appel Ajax 1</a></li>
                <li class="pure-menu-item"><a href="{{ path('ajax', {valeur: 'bar'}) }}" class="ajax pure-menu-link">Appel Ajax 2</a></li>
            </ul>
        </div>
        
    </div>
    
    <div class="pure-u-4-5">
        
        {% block content %}{% endblock %}
        
    </div>
    
</div>

</body>

<script src="js/jquery-2.1.3.min.js"></script>
<script src="js/handlebars-v3.0.0.js"></script>

<script id="test-template" type="text/x-handlebars-template">
{% raw %} 
<div class="pure-g">
    <div class="pure-u-1-2">{{titre}}</div>
    <div class="pure-u-1-2">{{contenu}}</div>
</div>
{% endraw  %}
</script>

<script>
var raw_template = $('#test-template').html();
var template = Handlebars.compile(raw_template);
  
$( ".ajax" ).click(function( event ) {
  event.preventDefault();
  $.getJSON($(this).attr('href'),function(data){
      
        $.each(data,function(index,element){
          var html = template(element);
          $('#main').append(html);
        });
        
  });
  
});
</script>

</html>